<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center">
  <h1>Games</h1>
  <%= link_to 'New Game', new_game_path, :class => "btn btn-primary" %>
</div>

<% if @games.count > 0 %>
<table class="table table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Detail</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.detail %></td>
        <td>
          <%#= link_to 'Show', game %>
          <%= link_to 'Edit', edit_game_path(game), :class => "btn btn-sm btn-primary" %>
          <%= link_to 'Delete', game, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
<p class="text-center py-3">No games added! Start a new game <%= link_to 'here', new_game_path %></p>
<% end %>