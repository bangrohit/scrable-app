<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center">
  <h1>Players</h1>
  <%= link_to 'New Player', new_player_path, :class => "btn btn-primary" %>
</div>

<% if @players.count > 0 %>
<table class="table table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.phone %></td>
        <td class="text-end">
          <%= link_to 'View', player, :class => "btn btn-primary btn-sm", remote: true %>
          <%= link_to 'Edit', edit_player_path(player), :class => "btn btn-sm btn-primary" %>
          <%= link_to 'Delete', player, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
<p class="text-center py-3">No players added! Add new player <%= link_to 'here', new_player_path %></p>
<% end %>

<div id="player_detail_area"></div>